<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_cisp_project_project_create_tree" model="ir.ui.view">
            <field name="name">view.cisp.project.project.create.tree</field>
            <field name="model">cisp.project.project.create</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="state"/>
                    <field name="code"/>
                    <field name="type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="department"/>
                    <field name="manager"/>
                </tree>
            </field>
        </record>

        <record id="view_cisp_project_project_create_form" model="ir.ui.view">
            <field name="name">view.cisp.project.project.create.form</field>
            <field name="model">cisp.project.project.create</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="common_apply" string="提交" class="oe_highlight" is_log="1"/>
                        <button name="common_reject" string="打回" is_log="1" is_reject="1"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="项目名称"/>
                            </h1>
                        </div>
                        <group invisible="1">
                            <field name="members"/>
                        </group>
                        <group>
                            <group string="基本信息">
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="type"/>
                                <field name="business_category" domain="[('type','=',type)]"/>
                                <field name="category"/>
                                <field name="contract_code" placeholder="没有则填:无"/>
                            </group>
                            <group string="人员信息">
                                <field name="department"/>
                                <field name="manager" domain="[('department','=',department)]"/>
                                <field name="business_manager"/>
                                <field name="create_user" readonly="1"/>
                            </group>
                            <group string="项目收入">
                                <field name="expected_income"/>
                                <field name="central_government_funds"
                                       attrs="{'invisible':[('type' ,'!=', 'government')],'required':[('type' ,'=', 'government')]}"/>
                                <field name="local_government_funds"
                                       attrs="{'invisible':[('type' ,'!=', 'government')],'required':[('type' ,'=', 'government')]}"/>
                                <field name="company_funds"
                                       attrs="{'invisible':[('type' ,'!=', 'government')],'required':[('type' ,'=', 'government')]}"/>
                            </group>
                            <group string="其它信息">
                                <field name="undertake_unit"/>
                                <field name="in_charge_department"
                                       attrs="{'invisible':[('type' ,'!=', 'government')],'required':[('type' ,'=', 'government')]}"/>
                                <field name="implementation_company"
                                       attrs="{'invisible':[('type' ,'!=', 'government')],'required':[('type' ,'=', 'government')]}"/>
                                <field name="financial_project_code"
                                       attrs="{'invisible':[('type' ,'!=', 'government')],'required':[('type' ,'=', 'government')]}"/>
                            </group>
                        </group>
                        <group string="项目客户">
                            <field name="partners" nolabel="1" domain="[('customer','=',True)]">
                                <tree>
                                    <field name="display_name"/>
                                    <field name="function"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                    <field name="contact_address"/>
                                </tree>
                            </field>
                        </group>
                        <group string="项目成员">
                            <field name="members_role" nolabel="1">
                                <tree editable="bottom">
                                    <field name="department"/>
                                    <field name="role"/>
                                    <field name="type"/>
                                    <field name="user" domain="[('department','=',department)]"/>
                                    <field name="content"/>
                                    <field name="weight" widget="percentage"/>
                                </tree>
                            </field>
                        </group>
                        <group string="项目预算">
                            <field name="budgets" nolabel="1">
                                <tree editable="bottom">
                                    <field name="type" domain="[('is_show','=',True)]"/>
                                    <field name="detail"/>
                                    <field name="money"/>
                                    <field name="department"/>
                                </tree>
                            </field>
                        </group>
                        <div>
                            <h2>预算合计:
                                <field name="budgets_sum" nolabel="1" class="oe_inline"/>元
                            </h2>
                        </div>
                        <group string="项目进度计划">
                            <field name="plans" nolabel="1" context="{'members':members[0][2]}">
                                <tree editable="bottom">
                                    <field name="stage"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="achievement"/>
                                    <field name="manager" domain="[('id','in',context.get('members',[]) )]"/>
                                </tree>
                            </field>
                        </group>
                        <group string="签名" col="4">
                            <field name="draft_user" readonly="1"/>
                            <field name="draft_datetime" readonly="1"/>
                            <field name="project_manager_user" readonly="1"/>
                            <field name="project_manager_datetime" readonly="1"/>
                            <field name="department_manager_user" readonly="1"/>
                            <field name="department_manager_datetime" readonly="1"/>
                            <field name="project_admin_user" readonly="1"/>
                            <field name="project_admin_datetime" readonly="1"/>
                            <field name="project_chief_user" readonly="1"/>
                            <field name="project_chief_datetime" readonly="1"/>
                            <field name="finance_user" readonly="1"/>
                            <field name="finance_datetime" readonly="1"/>
                            <field name="vice_chief_user" readonly="1"/>
                            <field name="vice_chief_datetime" readonly="1"/>
                        </group>
                        <!--<group string="项目合同等材料"></group>-->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>